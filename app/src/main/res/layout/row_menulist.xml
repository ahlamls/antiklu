<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="15dp"

    android:layout_marginVertical="3dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:layout_height="wrap_content" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:padding="5dp">


            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/pekalongan"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="5dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="0dp"
                app:layout_constraintLeft_toRightOf="@id/imageView8"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                app:layout_constraintRight_toLeftOf="@+id/masfatah"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="Cheat PB VIP" />

            <TextView
                android:id="@+id/textView13"
                app:layout_constraintRight_toLeftOf="@+id/masfatah"
                android:layout_width="0dp"
                app:layout_constraintLeft_toRightOf="@id/imageView8"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@id/textView12"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Rp 69.000" />

            <LinearLayout
                android:id="@+id/masfatah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/decrease_btn"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="-" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="0" />

                <Button
                    android:id="@+id/increase_btn"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="+" />
            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>